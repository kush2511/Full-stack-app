<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align:center;">Edit Comment</h1>
		<div class="allForm">
			<form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<textarea class="form-control" name="comment[text]" rows="3" maxlength=100 required><%=comment.text%></textarea>
				</div>
				<div class="form-group buttons">
					<button class="btn btn-success add">Update</button>
					<a class="btn btn-danger" href="/campgrounds/<%=campground_id%>">Cancel</a>
				</div>
			</form>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>