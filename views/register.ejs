<%- include("./partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align:center;">SignUp Here</h1>
		<div class="login">
			<form action="/register" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="username" placeholder="Enter Username">
				</div>
				 <div class="form-group">
                    <input class="form-control" type="email" name="email" placeholder="Enter E-mail">
                </div>
				<div class="form-group">
					<input class="form-control" type="password" name="password" placeholder="Enter Password">
				</div>
				<div class="form-group buttons">
					<button class="btn btn-md btn-info add">Register</button>
					<a href="/login" class="btn btn-md btn-success">Login Here</a>
				</div>
			</form>
		</div>
	</div>
</div>

<%- include("./partials/footer") %>