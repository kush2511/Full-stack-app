<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align:center;">Create Campground</h1>
		<div class="allForm">
			<form action="/campgrounds" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<input class="form-control" type="text" name="campground[name]" placeholder="Enter Name" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="campground[price]" placeholder="Enter Price" min="1000" max="15000" step="50" required>
				</div>
				<div class="form-group">
					<label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*" required>
				</div>
				<div class="form-group">
					<textarea class="form-control" name="campground[description]" placeholder="Add Description" rows="8" maxlength=500 required></textarea>
				</div>
				<div class="form-group buttons">
					<button class="btn btn-success add">Post</button>
					<a class="btn btn-danger" href="/campgrounds">Cancel</a>
				</div>
			</form>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>